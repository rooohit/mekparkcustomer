<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExtendedParkingSlots">

    <!-- TODO: Update blank fragment layout -->
   <LinearLayout
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <LinearLayout
           android:visibility="visible"
           android:id="@+id/bottom_sheet_main_content"

           android:background="@color/white"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">

           <!--Tollbar-->
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="56dp"
               android:layout_gravity="center"
               android:background="@color/colorRed"
               android:orientation="horizontal">

               <ImageView
                   android:id="@+id/bottomSheet_back_btn"
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   android:paddingTop="8dp"
                   android:paddingRight="8dp"
                   android:paddingBottom="8dp"
                   android:paddingLeft="8dp"
                   android:layout_gravity="center"
                   android:src="@drawable/ic_icon_material_arrow_back" />

               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:layout_weight="1"
                   android:layout_marginLeft="8dp"
                   android:orientation="horizontal">



                   <TextView
                       android:textColor="#FFFFFF"
                       android:id="@+id/mek_logo_title"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:text="Parking SLot"
                       android:textSize="14sp" />

                   <ImageView
                       android:layout_marginLeft="190dp"
                       android:layout_width="20dp"
                       android:layout_height="20dp"
                       android:src="@drawable/ic_icon_awesome_heart1"/>

                   <ImageView
                       android:layout_marginLeft="15dp"
                       android:layout_width="20dp"
                       android:layout_height="20dp"
                       android:src="@drawable/ic_icon_awesome_share1"/>
               </LinearLayout>



           </LinearLayout>

           <ImageView
               android:id="@+id/bottom_sheet_main_content_image_location"
               android:layout_width="match_parent"
               android:layout_height="180dp"
               android:scaleType="centerCrop"
               android:src="@drawable/imgitem" />

           <!--Prefferance Details-->

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="16dp"
               android:layout_marginRight="4dp"
               android:layout_marginTop="16dp"
               android:orientation="vertical">

               <TextView
                   android:id="@+id/bottom_sheet_main_content_title"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textStyle="bold"
                   android:fontFamily="@font/montserrat_semi_bold"
                   android:text="EDMC Parking Geeta coloy"
                   android:textColor="@color/black"
                   android:textSize="15sp"/>

               <TextView
                   android:id="@+id/bottom_sheet_main_content_description"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textColor="@color/black3"
                   android:fontFamily="@font/gotham_book_regular"
                   android:layout_marginTop="12dp"
                   android:text="prefferd for"
                   android:textSize="10sp" />

               <TextView
                   android:textStyle="bold"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="SUV/Luxury"
                   android:textColor="@color/colorRed"/>
               <TextView
                   android:textSize="12dp"
                   android:textColor="#9F9F9F"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Landmark-New Delhi"/>

           </LinearLayout>

           <!--distance-->
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="16dp"
               android:background="@color/light_background"
               android:orientation="horizontal"
               android:paddingBottom="16dp"
               android:paddingTop="16dp">

               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:gravity="center"
                   android:orientation="vertical">

                   <TextView
                       android:id="@+id/text_fare"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:fontFamily="@font/gotham_medium_regular"
                       android:text="Fare"
                       android:textColor="@color/black3"
                       android:textStyle="bold"
                       android:textSize="13sp" />

                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="12dp"
                       android:src="@drawable/rupee" />

                   <TextView
                       android:id="@+id/bottom_sheet_main_content_fare"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="8dp"
                       android:textColor="@color/black3"
                       android:fontFamily="@font/montserrat_regular"
                       android:text="25/hr"
                       android:textSize="12sp" />

               </LinearLayout>

               <View
                   android:layout_width="1dp"
                   android:layout_height="match_parent"
                   android:background="@drawable/vertical_dotted_line" />

               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:gravity="center"
                   android:orientation="vertical">

                   <TextView
                       android:id="@+id/text_distance"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:fontFamily="@font/gotham_medium_regular"
                       android:text="Distance"
                       android:textColor="@color/black3"
                       android:textStyle="bold"
                       android:textSize="13sp" />

                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="12dp"
                       android:src="@drawable/nav15" />

                   <TextView
                       android:id="@+id/bottom_sheet_main_content_distance"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="8dp"
                       android:textColor="@color/black3"
                       android:fontFamily="@font/montserrat_regular"
                       android:text="1.5 km"
                       android:textSize="12sp" />

               </LinearLayout>

               <View
                   android:layout_width="1dp"
                   android:layout_height="match_parent"
                   android:background="@drawable/vertical_dotted_line" />

               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:gravity="center"
                   android:orientation="vertical">

                   <TextView
                       android:id="@+id/text_opening_hrs"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@color/black3"
                       android:textStyle="bold"
                       android:fontFamily="@font/gotham_medium_regular"
                       android:text="Opening Hrs."
                       android:textSize="13sp" />

                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="12dp"
                       android:src="@drawable/nav16" />

                   <TextView
                       android:id="@+id/bottom_sheet_main_content_opening_hrs"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="8dp"
                       android:textColor="@color/black3"
                       android:fontFamily="@font/montserrat_regular"
                       android:text="Open 24 hrs"
                       android:textSize="12sp" />

               </LinearLayout>
           </LinearLayout>
           <!--Parking slots-->
           <LinearLayout

               android:id="@+id/bottom_sheet_main_content_parking_slot_ll"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">
               <LinearLayout
                   android:padding="15dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <TextView
                       android:id="@+id/text_parking_slot1"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="16dp"
                       android:layout_marginTop="16dp"
                       android:textStyle="bold"
                       android:fontFamily="@font/gotham_medium_regular"
                       android:text="SUV/Luxury"
                       android:textColor="#9F9F9F"
                       android:textSize="12dp" />

                   <TextView
                       android:id="@+id/text_parking_slot"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginBottom="16dp"
                       android:layout_marginLeft="46dp"
                       android:layout_marginTop="16dp"
                       android:textStyle="bold"
                       android:fontFamily="@font/gotham_medium_regular"
                       android:text="Fair/hour"
                       android:textColor="#9F9F9F"
                       android:textSize="12dp" />
                   <TextView
                       android:id="@+id/text_parking_slot2"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginBottom="16dp"
                       android:layout_marginLeft="46dp"
                       android:layout_marginTop="16dp"
                       android:textStyle="bold"
                       android:fontFamily="@font/gotham_medium_regular"
                       android:text="Slots Available"
                       android:textColor="#9F9F9F"
                       android:textSize="12dp" />


               </LinearLayout>

               <View
                   android:layout_width="match_parent"
                   android:layout_height="2dp"
                   android:background="@color/black4"/>
               <LinearLayout

                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">


                   <LinearLayout
                       android:padding="15dp"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">

                       <ImageView
                           android:layout_width="54dp"
                           android:layout_height="33dp"
                           android:layout_marginTop="8dp"
                           android:layout_marginBottom="8dp"
                           android:padding="2dp"
                           android:src="@drawable/ic_icon_awesome_car2" />


                       <TextView
                           android:layout_marginLeft="46dp"
                           android:id="@+id/bike_parking_fare"
                           android:layout_width="0dp"
                           android:layout_weight="1.2"
                           android:gravity="center"
                           android:layout_height="wrap_content"
                           android:fontFamily="@font/montserrat_regular"
                           android:text="Rs.40/hr"
                           android:textColor="@color/black"
                           android:textSize="14sp" />




                       <TextView
                           android:id="@+id/bike_parking_capacity"
                           android:layout_width="wrap_content"
                           android:layout_weight="1"
                           android:gravity="center"
                           android:layout_height="wrap_content"
                           android:fontFamily="@font/montserrat_regular"
                           android:text="100"
                           android:layout_marginLeft="46dp"
                           android:textColor="@color/black"
                           android:textSize="14sp" />

                   </LinearLayout>

                   <View
                       android:layout_width="match_parent"
                       android:layout_height="2dp"
                       android:background="@color/black4"/>

                   <LinearLayout
                       android:padding="15dp"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:gravity="center"
                       android:orientation="horizontal">

                       <ImageView
                           android:layout_width="54dp"
                           android:layout_height="32dp"
                           android:layout_marginTop="8dp"
                           android:layout_marginBottom="8dp"
                           android:padding="2dp"
                           android:src="@drawable/ic_motor22" />


                       <TextView
                           android:layout_marginLeft="35dp"
                           android:id="@+id/car_parking_fare"
                           android:layout_width="0dp"
                           android:layout_weight="1.2"
                           android:gravity="center"
                           android:layout_height="wrap_content"
                           android:fontFamily="@font/montserrat_regular"
                           android:text="Rs.20/hr"
                           android:textColor="@color/black"
                           android:textSize="14sp" />



                       <TextView
                           android:id="@+id/car_parking_capacity"
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:gravity="center"
                           android:layout_marginLeft="46dp"
                           android:layout_height="wrap_content"
                           android:fontFamily="@font/montserrat_regular"
                           android:text="70"
                           android:textColor="@color/black"
                           android:textSize="14sp" />


                   </LinearLayout>


               </LinearLayout>

           </LinearLayout>

           <LinearLayout
               android:layout_marginBottom="8dp"
               android:layout_marginTop="8dp"
               android:layout_width="match_parent"
               android:layout_marginLeft="16dp"
               android:layout_marginRight="16dp"
               android:layout_height="44dp"
               android:orientation="horizontal">

               <Button
                   android:id="@+id/navigate4"
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="wrap_content"
                   android:text="Navigate"
                   android:fontFamily="@font/montserrat_semi_bold"
                   android:textSize="16sp"
                   android:textAllCaps="false"
                   android:background="@color/colorRed"
                   android:textColor="@color/white"/>

               <Button
                   android:id="@+id/booknow"
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:textAllCaps="false"
                   android:layout_marginLeft="8dp"
                   android:fontFamily="@font/montserrat_semi_bold"
                   android:textSize="16sp"
                   android:layout_height="wrap_content"
                   android:text="Book Now"
                   android:background="@color/colorRed"
                   android:textColor="@color/white"/>



           </LinearLayout>

       </LinearLayout>


   </LinearLayout>

</androidx.core.widget.NestedScrollView>