<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:background="@drawable/ic_path_1573"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp">

                <ImageView
                    android:layout_marginTop="24dp"
                    android:layout_marginLeft="25dp"
                    android:id="@+id/back_btn"
                    android:layout_width="21dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_icon_material_arrow_back" />

                <TextView
                    android:layout_marginTop="22dp"
                    android:id="@+id/booking_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="26dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Add your details"
                    android:textColor="#ffffff"
                    android:textSize="14dp" />
            </LinearLayout>



            <ImageView
                android:layout_marginLeft="288dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/puja"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/fetchedtext"
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:text="9868605427"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/montserrat_regular"
                    />
            <TextView
                android:fontFamily="@font/montserrat_regular"
                android:layout_marginLeft="170dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="Change profile picture"
                android:textAlignment="center"
                android:textColor="#ffffff"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout

            android:background="@drawable/ic_path_3718"
            android:layout_width="match_parent"
            android:layout_height="800dp"
            android:layout_marginTop="58dp"
            android:orientation="vertical">

            <TextView
                android:textStyle="bold"
                android:textColor="@color/colorRed"
                android:textSize="14dp"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="70dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello!!"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="364dp"
                android:layout_height="34dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="75dp">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/carbrand1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:gravity="center_vertical"
                    android:hint="First Name"
                    android:textColor="#9F9F9F" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="364dp"
                android:layout_height="34dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/carbrand2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:gravity="center_vertical"
                    android:hint="Last Name"
                    android:textColor="#9F9F9F" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_marginLeft="25dp"
                android:layout_marginTop="30dp"
                android:textColor="#9F9F9F"
                android:textSize="11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"/>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginLeft="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_phone"/>
            <TextView
                android:layout_marginLeft="5dp"
                android:textColor="#404040"
                android:textSize="11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91-8076217463"/>

                <ImageView
                    android:layout_marginLeft="196dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_icon_material_verified_user"/>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="364dp"
                android:layout_height="34dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/carbrand3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:gravity="center_vertical"
                    android:hint="E-Mail ID"
                    android:textColor="#9F9F9F" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="364dp"
                android:layout_height="34dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/carbrand4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:gravity="center_vertical"
                    android:hint="Gender"
                    android:textColor="#9F9F9F" />
            </androidx.cardview.widget.CardView>



            <LinearLayout
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView

                    android:textColor="#9F9F9F"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Complete Address"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="190dp"
                    android:src="@drawable/ic_edit" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:visibility="gone"
                android:id="@+id/addressextend"
                android:layout_gravity="center"
                android:layout_width="366dp"
                android:layout_height="93dp">
                <EditText
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </androidx.cardview.widget.CardView>


            <Button
                android:id="@+id/buttondetail"
                android:layout_width="246dp"
                android:layout_height="43dp"
                android:layout_marginLeft="84dp"
                android:layout_marginTop="140dp"
                android:background="@color/colorRed"
                android:fontFamily="@font/montserrat_regular"
                android:text="Update Profile"
                android:textColor="#ffffff"
                android:textSize="12dp"
                android:textStyle="bold" />
        </LinearLayout>
    </FrameLayout>
</ScrollView>

